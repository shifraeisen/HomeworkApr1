@using HomeworkApr1.Data;
@model List<Question>

    @foreach(var q in Model)
{
    <div class="row">
        <div class="col-md-8 offset-md-2" style="margin-top:50px">
            <div class="card card-body bg-light">
                <h4>
                    <a href="/home/viewquestion?id=@q.Id">
                        @q.Title
                    </a>
                </h4>
                <div>
                    <span>Tags:</span>
                    @foreach(var t in q.QuestionsTags)
                    {
                        <span class="badge bg-info">@t.Tag.Name</span>
                    }                    
                </div>
                <div style="margin-top: 10px;">
                    @q.Text
                </div>
                @* <span>Likes: 1</span> *@
                <br />
                <span>@q.Answers.Count answer@(q.Answers.Count != 1 ? "s" : "")</span>
            </div>
        </div>
    </div>
}
@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.js"></script>
    <script>
        $(() => {
            $("#tags").tagsinput({
                tagClass: 'badge bg-info'
            });
        })
    </script>
}
@section styles
    {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.css" />
}
